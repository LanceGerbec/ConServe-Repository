# ============================================
# ConServe Backend Environment Variables
# Copy this to .env and fill in your values
# ============================================

# Server Configuration
PORT=5000
NODE_ENV=development

# Database (MongoDB Atlas)
# Format: mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority
MONGO_URI=your_mongodb_connection_string_here

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_min_32_characters
JWT_EXPIRE=7d
REFRESH_TOKEN_SECRET=your_refresh_token_secret_min_32_characters
SESSION_SECRET=your_session_secret_min_32_characters

# Email Service (Gmail SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_gmail_app_password_here

# Client URL (Frontend)
CLIENT_URL=http://localhost:5173
ADMIN_EMAIL=admin@neust.edu.ph

# Cloudinary Configuration (https://cloudinary.com)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Security Settings
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME=30

# Optional: 2FA (Not implemented yet)
# TWO_FACTOR_ENABLED=false
# TWO_FACTOR_ISSUER=ConServe

# ============================================
# PRODUCTION VALUES (Deploy to Render/Railway)
# ============================================
# NODE_ENV=production
# CLIENT_URL=https://your-frontend-domain.vercel.app
# MONGO_URI=mongodb+srv://production_user:password@cluster.mongodb.net/conserve_prod
# JWT_SECRET=generate_with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"

# ============================================
# SETUP INSTRUCTIONS
# ============================================
# 1. Copy this file: cp .env.example .env
# 2. Generate secrets: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# 3. MongoDB: Create cluster at https://cloud.mongodb.com
# 4. Cloudinary: Sign up at https://cloudinary.com/console
# 5. Gmail App Password: https://myaccount.google.com/apppasswords
# 6. NEVER commit .env to version control!